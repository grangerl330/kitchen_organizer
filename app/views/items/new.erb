<h2>Create A New Item:</h2>

<form action="/items" method="POST">
  <p>Name: <input type="text" name="name"></p>
  <label> Cabinet </label>
  <select name="cabinet name">
    <% @user.cabinets.each do |cabinet| %>
      <% if cabinet.id == @cabinet.id %>
        <option selected="selected"><%=cabinet.name%></option>
      <% else %>
        <option><%=cabinet.name%></option>
      <% end %>
    <% end %>
  </select>
  <br>
  <br>
  <p style="margin-bottom: 0"><input type="submit" value="Create Item"></p>
</form>
