  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Kitchen Organizer</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <div class="wrapper">

        <%= yield %>

      <footer class="branding">
        <% if logged_in? %>
          <% if request.path_info != "/cabinets" &&  request.path_info != "/cabinets/items" && request.path_info != "/welcome"%>
            <p><a href="/cabinets"><input type="button" value="Back To Kitchen"></a></p>
          <% end %>
          <% if request.path_info == "/cabinets" && !current_user.cabinets.empty? && !current_user.items.empty? %>
            <p><a href="/cabinets/items"><input type="button" value="Show All Items"></a></p>
          <% elsif request.path_info == "/cabinets/items"%>
            <p><a href="/cabinets"><input type="button" value="Hide All Items"></a></p>
          <% end %>
          <a href="/logout"><p style="font-size: 13px; color:#b8b8b8;">Log Out</p></a>
        <% end %>
        <small style="color:#b8b8b8">&copy; 2019 <strong>Kitchen Organizer</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
