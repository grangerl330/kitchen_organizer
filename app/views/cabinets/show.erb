<h2><%= @cabinet.name %>
  <a href="/items/new"><input name="<%=@cabinet.id%>" type="button" value="Add Item"></a>
  <a href="/cabinets/<%= @cabinet.id %>/edit"><input type="button" value="Edit Cabinet"></a>
  <form style="display:inline-block;" action="/cabinets/<%=@cabinet.id%>/delete" method="POST">
    <input id="hidden" type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Cabinet">
  </form>
</h2>
<p><b>Capacity:</b>
  <% if @cabinet.items.count > 0 %>
    <%= @cabinet.items.count %>/<%= @cabinet.capacity %></p>
  <% else %>
    Empty
  <% end %>
</p>

<p><b>Items:</b></p>
<% @cabinet.items.each_with_index do |item, index| %>
  <p><%= index + 1 %>. <%= item.name %> <a href="/items/<%=item.id%>/edit"><input type="button" value="Edit"></a></p>
<% end %>
