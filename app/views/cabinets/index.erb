<h2>Your Cabinets:</h2>

<% @user.cabinets.each do |cabinet| %>
  <h3><%= cabinet.name %></h3>
  <p>Capacity: <%= cabinet.capacity - cabinet.items.count %>/<%= cabinet.capacity %></p>
  <p><a href="/cabinets/<%=cabinet.id%>"><button type="button">View Cabinet</button></a></p>
<% end  %>

<p><a href="cabinets/new"><button type="button">Add Cabinet</button></a></p>
